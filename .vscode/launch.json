{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "--compilers ts:ts-node/register,tsx:ts-node/register",
                "test/**/*.test.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch via NPM",
            "runtimeExecutable": "npm",
            "windows": {
                "runtimeExecutable": "npm.cmd"
            },
            "runtimeArgs": [
                "run-script",
                "debug"
            ],
            "port": 5858,
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Programm starten",
            "program": "${workspaceRoot}/src/app.ts",
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/dist/**/*js"
            ],
            "stopOnEntry": false,
            "runtimeArgs": [
                // "--nolazy"
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "An den Prozess anf√ºgen",
            "port": 5858,
            "outFiles": []
        },
        {
            //from here https://gist.github.com/paambaati/54d33e409b4f7cf059cc
            "name": "Run mocha",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/.bin/mocha",
            "stopOnEntry": false,
            "args": [
                "--compilers ts:ts-node/register,tsx:ts-node/register",
                "test/**/*.test.ts"
            ],
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/dist/**/*js"
            ],
            "runtimeExecutable": null,
            "env": {
                //  "NODE_ENV": "testing"
            }
        },
        {
            "name": "Run mocha2",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": [
                "--no-timeouts",
                "--compilers",
                "ts:ts-node/register",
                "${workspaceRoot}/test/**/*.test.ts"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector"
        }
    ]
}